{
    "swagger": "2.0",
    "info": {
        "contact": {}
    },
    "paths": {
        "/v1/consulta-endereco": {
            "post": {
                "description": "Consulta o endereço a partir do CEP informado",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Endereço"
                ],
                "summary": "Consulta endereço",
                "parameters": [
                    {
                        "description": "CEP a ser consultado",
                        "name": "cep",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/main.Address"
                        }
                    },
                    "400": {
                        "description": "Requisição inválida"
                    },
                    "404": {
                        "description": "CEP não encontrado"
                    },
                    "500": {
                        "description": "Erro ao consultar o ViaCEP ou decodificar a resposta"
                    }
                }
            }
        }
    },
    "definitions": {
        "main.Address": {
            "type": "object",
            "properties": {
                "bairro": {
                    "type": "string"
                },
                "cep": {
                    "type": "string"
                },
                "cidade": {
                    "type": "string"
                },
                "complemento": {
                    "type": "string"
                },
                "estado": {
                    "type": "string"
                },
                "frete": {
                    "type": "number"
                },
                "rua": {
                    "type": "string"
                }
            }
        }
    }
}